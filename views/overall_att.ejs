            <div class="body-section mCustomScrollbar" data-mcs-theme="minimal-dark" style="display: flex; justify-content: center; height: 500px;">
                <div class="tablediv" style="display: flex;">
                    <input type="text" id="myInput" onkeyup="filterDate()" placeholder="Search by date">
                    <table id="myTable">
                        <tr>
                            <!-- <th>S. No.</th> -->
                            <th>Date</th>
                            <th>Subject</th>
                            <th>Attendance</th>
                        </tr>
                    <% for(date in att) { %>
                        <% for(sub in att[date]) { %>
                            <% if(att[date][sub][uid]) { %>
